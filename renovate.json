{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    
    "automerge": false,
    "rangeStrategy": "bump",

    "baseBranches": ["deps"],
    "branchPrefix": "deps/",
    "rebaseWhen": "behind-base-branch",

    "labels": ["deps"],
    
    "recreateClosed": true,
    
    "packageRules": [
        {
            "groupName": "deps/minor",
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true
        },
        {
            "groupName": "deps/major",
            "matchUpdateTypes": ["major"]
        }
    ]
    
}